            var result = '';
            for (var i = length; i > 0; --i) result += chars[Math.round(Math.random() * (chars.length - 1))];
            return result;
        }*/
        Checkout.configure({
            merchant: merchantId,
            order: {
                amount: function () {
                    //Dynamic calculation of amount
                    return 80 + 20;
                },
                currency: 'USD',
                description: 'Ordered goods',
                //id: randomId()
            },
            session: {
                id: sessionId,
                version: sessionVersion
            },
            interaction: {
                merchant: {
                    name: 'Merchant Name',
                    address: {
                        line1: '200 Sample St',
                        line2: '1234 Example Town'
                    }
                }
            }
        });
    </script>

